

<div class="verticalScroll">
    @if (Model.Issues.Count == 0)
    {
        <p>
            No Open issues for this repository! 
        </p>
    }
    else
    {
        <div class="list-group">
            @foreach (Octokit.Issue issue in Model.Issues)
            {
                <a href="#" class="list-group-item" data-toggle="modal" data-target="#myModal">@issue.Title</a>
            }
            
        </div>
    }
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a card for this Issue?</h4>
            </div>
            <div class="modal-body">

                <p>TODO: Text Input for card description, drop down list for Trello List to initiate the card to.</p>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Create!</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
